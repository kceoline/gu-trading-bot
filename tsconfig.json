{
  "compilerOptions": {
    "module": "esnext",
    "target": "ESNext",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "lib": ["esnext"],
  "include": [
    "src/**/*"
  ]
}